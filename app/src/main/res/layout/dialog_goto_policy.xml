<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="wrap_content"
    android:layout_height="wrap_content">


    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/bg_white_radius_20dp"
        android:paddingHorizontal="34dp"
        android:paddingTop="48dp"
        android:paddingBottom="16dp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent">

        <TextView
            android:id="@+id/tv_dialog_goto_policy_title"
            style="@style/TextView.Heading.Bold.16"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginHorizontal="20dp"
            android:text="@string/dialog_goto_policy_title"
            android:textColor="@color/gray06"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:id="@+id/dialog_goto_policy_sentence_one"
            style="@style/TextView.Label.Regular.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="8dp"
            android:text="@string/dialog_goto_policy_sentence_one"
            android:textColor="@color/gray06"
            app:layout_constraintEnd_toEndOf="@id/tv_dialog_goto_policy_title"
            app:layout_constraintStart_toStartOf="@id/tv_dialog_goto_policy_title"
            app:layout_constraintTop_toBottomOf="@id/tv_dialog_goto_policy_title" />

        <TextView
            android:id="@+id/dialog_goto_policy_sentence_two"
            style="@style/TextView.Label.Regular.14"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="6dp"
            android:text="@string/dialog_goto_policy_sentence_two"
            android:textColor="@color/gray06"
            app:layout_constraintEnd_toEndOf="@id/dialog_goto_policy_sentence_one"
            app:layout_constraintStart_toStartOf="@id/dialog_goto_policy_sentence_one"
            app:layout_constraintTop_toBottomOf="@id/dialog_goto_policy_sentence_one" />

        <Button
            android:id="@+id/tv_dialog_goto_policy_cancel"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:layout_marginTop="32dp"
            android:background="@drawable/selector_rewrite"
            android:fontFamily="@font/suit_bold"
            android:includeFontPadding="false"
            android:text="@string/dialog_goto_policy_cancle"
            android:textColor="@color/gray03"
            android:textSize="16sp"
            app:layout_constraintEnd_toStartOf="@id/tv_dialog_goto_policy_cancel"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toBottomOf="@+id/dialog_goto_policy_sentence_two" />

        <Button
            android:id="@+id/tv_dialog_goto_policy_input"
            style="@style/Widget.AppCompat.Button.Borderless"
            android:layout_width="116dp"
            android:layout_height="wrap_content"
            android:background="@drawable/selector_rewrite"
            android:fontFamily="@font/suit_bold"
            android:includeFontPadding="false"
            android:text="@string/dialog_goto_policy_input"
            android:textColor="@color/primary_blue"
            android:textSize="16sp"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@id/tv_dialog_goto_policy_cancel"
            app:layout_constraintTop_toTopOf="@+id/tv_dialog_goto_policy_cancel" />

    </androidx.constraintlayout.widget.ConstraintLayout>
</androidx.constraintlayout.widget.ConstraintLayout>