<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>
        <variable
            name="myPageViewModel"
            type="com.fork.spoonfeed.presentation.ui.mypage.viewmodel.MyPageViewModel" />
    </data>

    <androidx.constraintlayout.widget.ConstraintLayout
        android:layout_width="match_parent"
        android:background="@color/white"
        android:layout_height="match_parent"
        tools:context=".presentation.ui.mypage.view.MyPostManagementCommentFragment">

        <androidx.recyclerview.widget.RecyclerView
            android:id="@+id/rv_mypostmanagement"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            app:layout_constraintTop_toTopOf="parent"
            tools:itemCount="6"
            tools:listitem="@layout/item_comment" />

        <androidx.constraintlayout.widget.ConstraintLayout
            android:id="@+id/ctl_mypostmanagement_no_comment"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="210dp"
            android:visibility="gone"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent">

            <TextView
                android:id="@+id/tv_search_input_result_no_comment"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@string/search_input_no_result"
                app:layout_constraintEnd_toEndOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <ImageView
                android:layout_width="27dp"
                android:layout_height="22dp"
                android:src="@drawable/img_sad"
                app:layout_constraintBottom_toBottomOf="@id/tv_search_input_result_no_comment"
                app:layout_constraintStart_toEndOf="@+id/tv_search_input_result_no_comment"
                app:layout_constraintTop_toTopOf="@id/tv_search_input_result_no_comment" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </androidx.constraintlayout.widget.ConstraintLayout>

</layout>